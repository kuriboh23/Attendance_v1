<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/rounded_top_sheet"
    android:padding="16dp">

    <View
        android:layout_width="80dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/drag_handle"/>

    <!-- Header Row -->
    <RelativeLayout
        android:layout_marginTop="12dp"
        android:layout_marginBottom="8dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:id="@+id/tvLeaveDetailDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Dec 30, 2023"
            android:textColor="@color/black"
            android:textSize="16sp"
            android:fontFamily="@font/poppins_bold"
            android:layout_alignParentStart="true" />

        <TextView
            android:id="@+id/tvLeaveDetailStatus"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentEnd="true"
            android:paddingHorizontal="8dp"
            android:paddingVertical="4dp"
            android:background="@drawable/status_pending"
            android:text="Pending"
            android:textColor="@color/white"
            android:textSize="14sp"
            android:fontFamily="@font/poppins_semibold" />
    </RelativeLayout>

<!--
    <TextView
        android:id="@+id/tvLeaveDetailDate"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"

        android:fontFamily="@font/poppins_bold"
        android:text="Date"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginBottom="8dp"/>
-->

    <TextView
        android:id="@+id/tvLeaveDetailType"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Type"
        android:textSize="16sp"
        android:textColor="@color/gray_black"
        android:layout_marginBottom="8dp"/>

<!--    <TextView
        android:id="@+id/tvLeaveDetailStatus"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Status"
        android:textSize="16sp"
        android:layout_marginBottom="8dp"/>-->

    <TextView
        android:id="@+id/tvLeaveDetailNote"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins"

        android:textColor="@color/gray_black"
        android:text="Note"
        android:textSize="16sp"
        android:layout_marginBottom="16dp"/>

    <!-- Attachment Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_marginBottom="16dp">

        <TextView
            android:id="@+id/tvLeaveDetailAttachmentLabel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:text="Attachment"
            android:textColor="@color/black"
            android:fontFamily="@font/poppins_bold"
            android:textSize="16sp"
            android:layout_marginEnd="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tvLeaveDetailAttachment"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/mainColor"
            android:paddingVertical="8dp"
            android:paddingHorizontal="12dp"
            android:text="No attachment"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins"
            android:textAllCaps="false"
            app:icon="@drawable/attachment"
            app:iconTint="@color/white"
            app:cornerRadius="8dp"/>
    </LinearLayout>


</LinearLayout>
<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="@drawable/rounded_top_sheet"
    android:padding="16dp">

    <View
        android:layout_width="80dp"
        android:layout_height="4dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="12dp"
        android:background="@drawable/drag_handle"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_bold"
        android:text="Leaves Filter"
        android:textSize="16sp"
        android:textColor="@color/black"
        android:layout_marginBottom="24dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Status"
        android:textSize="16sp"
        android:textColor="@color/gray_black"
        android:layout_marginBottom="8dp"/>

    <!-- Status Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:paddingHorizontal="8dp"
        android:layout_marginBottom="16dp">

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/tvLeaveStatusGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            app:singleSelection="true"
            app:selectionRequired="false">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/tvLeavePending"
                style="@style/Widget.Material3.Button.TextButton"
                android:backgroundTint="@color/button_toggle_background"

                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:paddingVertical="8dp"
                android:paddingHorizontal="12dp"
                android:text="Pending"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/button_toggle_text_color"                android:fontFamily="@font/poppins"
                android:textAllCaps="false"
                app:strokeColor="@color/gray_light"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tvLeaveApproved"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:backgroundTint="@color/button_toggle_background"

                android:paddingVertical="8dp"
                android:paddingHorizontal="12dp"
                android:text="Approved"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/button_toggle_text_color"                android:fontFamily="@font/poppins"
                android:textAllCaps="false"
                app:strokeColor="@color/gray_light"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tvLeaveRejected"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:backgroundTint="@color/button_toggle_background"

                android:paddingVertical="8dp"
                android:paddingHorizontal="12dp"
                android:text="Rejected"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/button_toggle_text_color"                android:fontFamily="@font/poppins"
                android:textAllCaps="false"
                app:strokeColor="@color/gray_light"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp"/>
        </com.google.android.material.button.MaterialButtonToggleGroup>

    </LinearLayout>
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:fontFamily="@font/poppins_semibold"
        android:text="Type"
        android:textSize="16sp"
        android:textColor="@color/gray_black"
        android:layout_marginBottom="8dp"/>

    <!-- Type Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:layout_gravity="center"
        android:paddingHorizontal="8dp"
        android:layout_marginBottom="16dp">

        <com.google.android.material.button.MaterialButtonToggleGroup
            android:id="@+id/tvLeaveTypeGroup"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="12dp"
            app:singleSelection="true"
            app:selectionRequired="false">
            <com.google.android.material.button.MaterialButton
                android:id="@+id/tvLeaveCasual"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:backgroundTint="@color/button_toggle_background"

                android:paddingVertical="8dp"
                android:paddingHorizontal="12dp"
                android:text="Casual"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/button_toggle_text_color"                android:fontFamily="@font/poppins"
                android:textAllCaps="false"
                app:strokeColor="@color/gray_light"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp"/>

            <com.google.android.material.button.MaterialButton
                android:id="@+id/tvLeaveSick"
                style="@style/Widget.Material3.Button.TextButton"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:backgroundTint="@color/button_toggle_background"

                android:paddingVertical="8dp"
                android:paddingHorizontal="12dp"
                android:text="Sick"
                android:textSize="14sp"
                android:layout_marginEnd="8dp"
                android:textColor="@color/button_toggle_text_color"
                android:fontFamily="@font/poppins"
                android:textAllCaps="false"
                app:strokeColor="@color/gray_light"
                app:strokeWidth="1dp"
                app:cornerRadius="8dp"/>
        </com.google.android.material.button.MaterialButtonToggleGroup>

    </LinearLayout>

    <!-- Apply Reset Section -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:paddingHorizontal="8dp"
        android:layout_marginBottom="16dp">

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tvLeaveReset"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:backgroundTint="@color/white"
            android:paddingVertical="8dp"
            android:paddingHorizontal="12dp"
            android:text="Reset"
            android:textSize="14sp"
            android:layout_marginEnd="8dp"
            android:textColor="@color/mainColor"
            android:fontFamily="@font/poppins_semibold"
            android:textAllCaps="false"
            app:strokeColor="@color/mainColor"
            app:strokeWidth="1dp"
            app:cornerRadius="8dp"/>

        <com.google.android.material.button.MaterialButton
            android:id="@+id/tvLeaveApply"
            style="@style/Widget.Material3.Button.TextButton"
            android:layout_width="wrap_content"
            android:layout_height="60dp"
            android:backgroundTint="@color/mainColor"
            android:paddingVertical="8dp"
            android:paddingHorizontal="12dp"
            android:layout_weight="1"
            android:text="Apply"
            android:textSize="14sp"
            android:textColor="@color/white"
            android:fontFamily="@font/poppins_semibold"
            android:textAllCaps="false"
            app:cornerRadius="8dp"/>

    </LinearLayout>
</LinearLayout>
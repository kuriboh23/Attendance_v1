<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Base.Theme.Project" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- Customize your dark theme here. -->
        <item name="colorPrimaryDark">@color/white</item>
        <item name="android:windowLightStatusBar">true</item>
        <item name="colorAccent">@color/mainColor</item>

        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/mainColor</item>


    </style>

    <style name="Theme.App.SplashScreen" parent="Theme.SplashScreen">
        <!-- Set the splash screen background color -->
        <item name="windowSplashScreenBackground">@color/mainColor</item>

        <!-- Use your app logo/icon -->
        <item name="windowSplashScreenAnimatedIcon">@drawable/ocp_logo</item>

        <!-- Set the theme of the Activity that follows your splash screen -->
        <item name="postSplashScreenTheme">@style/Base.Theme.Project</item>
    </style>

</resources>